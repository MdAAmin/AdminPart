<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/border">

    <!-- First Row (Course ID and Course Name in the same row) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/eds"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/courseId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Course ID"
            android:background="@drawable/shape1"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/courseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Course Name"
            android:background="@drawable/shape2"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Second Row (Exam Type, Semester, and Year in the same row) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/eds"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/examType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Exam Type"
            android:background="@drawable/shape3"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Semester"
            android:background="@drawable/shape4"
            android:textColor="#000000"
            android:textSize="16sp" />


    </LinearLayout>

    <!-- Third Row (PDF Type) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/eds"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Year"
            android:textColor="#000000"
            android:background="@drawable/shape5"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pdfType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PDF Type"
            android:textColor="#000000"
            android:background="@drawable/shape6"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
